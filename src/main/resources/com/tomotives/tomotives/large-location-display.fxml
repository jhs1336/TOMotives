<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane maxHeight="300" maxWidth="425" minHeight="300" minWidth="425" stylesheets="@large-location-display.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tomotives.tomotives.LargeLocationController">
    <children>
        <fx:define>
            <Image fx:id="image" url="@Images/testimage3.jpg" />
        </fx:define>

        <fx:include fx:id="resizableImage" source="resizable-image.fxml" fitHeight="300" fitWidth="425" />

        <!-- Location name with underline -->
        <Label fx:id="locationNameLabel" layoutX="8" layoutY="40" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Location Name" />
        <Line endX="208" endY="70" layoutX="216.0" layoutY="-12.0" startX="8" startY="70" strokeWidth="2" />

        <!-- Star rating section -->
        <HBox layoutX="8" layoutY="220" spacing="5">
            <children>
                <Label style="-fx-font-size: 24px;" styleClass="filled-star" text="★" />
                <Label style="-fx-font-size: 24px;" styleClass="filled-star" text="★" />
                <Label style="-fx-font-size: 24px;" styleClass="filled-star" text="★" />
                <Label style="-fx-font-size: 24px;" styleClass="empty-star" text="★" />
                <Label style="-fx-font-size: 24px;" styleClass="empty-star" text="★" />
                <Label fx:id="starRatingLabel" layoutX="180" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="X.X" />
            </children>
        </HBox>

        <!-- Dollar sign rating section -->
        <HBox layoutX="8" layoutY="260" spacing="10">
            <children>
                <Label style="-fx-font-size: 24px;" styleClass="filled-price" text="\$" />
                <Label style="-fx-font-size: 24px;" styleClass="filled-price" text="\$" />
                <Label style="-fx-font-size: 24px;" styleClass="filled-price" text="\$" />
                <Label style="-fx-font-size: 24px;" styleClass="empty-price" text="\$" />
                <Label style="-fx-font-size: 24px;" styleClass="empty-price" text="\$" />
                <Label fx:id="priceRatingLabel" layoutX="180" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="X.X" />
            </children>
        </HBox>

        <!-- Filters -->
        <HBox layoutX="260" layoutY="220" spacing="20">
            <children>
                <Button fx:id="filter1Button" style="-fx-background-color: #ff6b6b; -fx-background-radius: 20; -fx-text-fill: black; -fx-padding: 5 15;" text="Filter 1" />
                <Button fx:id="filter2Button" style="-fx-background-color: #ff6b6b; -fx-background-radius: 20; -fx-text-fill: black; -fx-padding: 5 15;" text="Filter 2" />
            </children>
        </HBox>

        <HBox layoutX="260" layoutY="260" spacing="20">
            <children>
                <Button fx:id="filter3Button" style="-fx-background-color: #ff6b6b; -fx-background-radius: 20; -fx-text-fill: black; -fx-padding: 5 15;" text="Filter 3" />
                <Button fx:id="filter4Button" style="-fx-background-color: #ff6b6b; -fx-background-radius: 20; -fx-text-fill: black; -fx-padding: 5 15;" text="Filter 4" />
            </children>
        </HBox>
    </children>
</AnchorPane>
