<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import com.dlsc.formsfx.view.controls.SimpleBooleanControl?>
<?import javafx.beans.property.SimpleBooleanProperty?>
<HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1280.0" stylesheets="" style="-fx-background-color: #00a0b0;" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tomotives.tomotives.controllers.ToolbarController">
    <children>
        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/logo-simple.png" />
            </image>
            <HBox.margin>
                <Insets left="20.0" right="20.0" />
            </HBox.margin>
        </ImageView>
        <Button fx:id="homeButton" mnemonicParsing="false" styleClass="toolbarButton" text="Home" textFill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="browseButton" mnemonicParsing="false" styleClass="toolbarButton" text="Browse" textFill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="favouritesButton" mnemonicParsing="false" styleClass="toolbarButton" text="Favourites" textFill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <children>
                <TextField fx:id="searchField" prefHeight="30.0" prefWidth="200.0" promptText="Search" />
                <Button fx:id="signupButton" style="-fx-background-color: transparent;" styleClass="toolbarButton" text="Sign Up" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Label fx:id="divider" text="|" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Button fx:id="loginAndProfileButton" style="-fx-background-color: transparent;" styleClass="toolbarButton" text="Log in" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="16.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</HBox>
